<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/picture_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/picture_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stored_picture_height"
        android:scaleType="centerCrop" />
    <ImageView
        android:id="@+id/icon_check"
        android:layout_width="@dimen/stored_picture_icon_check_size"
        android:layout_height="@dimen/stored_picture_icon_check_size"
        android:layout_marginStart="@dimen/stored_picture_icon_check_margin"
        android:layout_marginTop="@dimen/stored_picture_icon_check_margin"
        android:src="@drawable/ic_check"
        android:visibility="invisible"
        android:layout_gravity="start|top"/>
</FrameLayout>